<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=Rigthemarket</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password">icreate</property>
    <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
    <mapping class="model.Login"></mapping>
    <mapping class="model.Notification"></mapping>
    <mapping class="model.Registeration"></mapping>
    <mapping class="model.VirtualMoney"></mapping>
    <mapping class="model.VSMShareDetail"></mapping>
    <mapping class="model.Buyshares"></mapping>
    <mapping class="model.Myshares"></mapping>
    <mapping class="model.Sellshares"></mapping>
    <mapping class="model.MyHistory"></mapping>
    <mapping class="model.Watchlist"></mapping>
    <mapping class="model.SetPointer"></mapping>
  </session-factory>
</hibernate-configuration>
